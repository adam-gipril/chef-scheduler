{
  "name": "chef-cal-integration",
  "version": "1.0.0",
  "description": "Google Calendar Integration for chef scheduler",
  "repository": {
    "type": "git",
    "url": "https://github.com/bikeshaman/chef-cal-integration.git"
  },
  "main": "index.js",
  "type": "module",
  "scripts": {
    "docs": "rm -rf docs && jsdoc -c ./jsdoc.json -d ./docs -r && open docs/index.html",
    "lint": "eslint src --ext ts",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w",
    "start": "GOOGLE_APPLICATION_CREDENTIALS=\"credentials.json\" node dist/index.js",
    "start:watch": "nodemon dist/index.js",
    "test": "jest"
  },
  "author": "Adam Gipril <adam.gipril@icloud.com>",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "googleapis": "^39.2.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.4.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "jest": "^24.9.0",
    "jsdoc": "^3.6.3",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
