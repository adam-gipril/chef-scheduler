{
  "name": "chef-cal-integration",
  "version": "1.0.0",
  "description": "Google Calendar Integration for chef scheduler",
  "license": "ISC",
  "author": "Adam Gipril <adam.gipril@icloud.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/bikeshaman/chef-cal-integration.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "docs": "rm -rf docs && jsdoc -c ./jsdoc.json -d ./docs -r && open docs/index.html",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*@(.ts|.js|.md)\"",
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "build:watch": "rm -rf dist && tsc -w",
    "start": "NODE_ENV=production node dist/server.js",
    "start:watch": "NODE_ENV=development nodemon dist/server.js",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "express": "^4.17.1",
    "google-auth-library": "^5.9.1",
    "googleapis": "^47.0.0",
    "module-alias": "^2.2.2",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.0",
    "@types/node": "^12.12.25",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^24.9.0",
    "jsdoc": "^3.6.3",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.5"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
